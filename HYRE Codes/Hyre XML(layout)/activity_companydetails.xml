<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#4285F4"
        app:titleTextColor="@color/white"
        app:title="HYRE"
        app:titleMarginStart="190sp"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:layout_marginTop="20sp"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/cdpimg"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profile" />

        <View
            android:id="@+id/line"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:background="@color/black" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/cdname"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:drawableStart="@drawable/ic_profile"
            android:ems="10"
            android:hint="Name"
            android:textSize="24dp"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_profile" />

        <TextView
            android:id="@+id/cdusername"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Username"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cddesc"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_description"
            android:drawableLeft="@drawable/ic_description"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Company Description"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cdptitle"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_project"
            android:drawableLeft="@drawable/ic_project"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Project Title"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cdpdesc"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_description"
            android:drawableLeft="@drawable/ic_description"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Project Description"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cdprole"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_role"
            android:drawableLeft="@drawable/ic_role"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Project Role"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cdpskills"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_skills"
            android:drawableLeft="@drawable/ic_skills"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Project skills"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cdpduratiion"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_duration"
            android:drawableLeft="@drawable/ic_duration"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Project Duration"
            android:textColor="#000000"
            android:textSize="24dp" />


        <Button
            android:id="@+id/b15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_marginTop="40dp"
            android:textSize="24sp"
            app:backgroundTint=" #4285F4"
            android:layout_gravity="center"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/freelancer_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="185dp"
            app:itemBackground="@color/white"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/freelancer_bottom_navigation_menu" />

    </LinearLayout>
</ScrollView>