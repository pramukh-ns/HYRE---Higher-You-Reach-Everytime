<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#4285F4"
            app:titleTextColor="@color/white"
            app:title="HYRE"
            app:titleMarginStart="185sp"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/pimg1"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_profile"/>

        <View
            android:id="@+id/line"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:background="@color/black" />

        <EditText
            android:id="@+id/pp11"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:drawableStart="@drawable/ic_profile"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="24dp"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/pp12"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="25dp"
            android:ems="10"
            android:hint="Username"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/pp13"
            android:hint="DOB"
            android:inputType="date"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:drawableLeft="@drawable/ic_dob"
            android:drawablePadding="25dp"/>


        <EditText
            android:id="@+id/pp14"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:drawableStart="@drawable/ic_phone"
            android:textSize="24dp"
            android:inputType="number"
            android:hint="Number"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_phone" />

        <EditText
            android:id="@+id/pp15"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_location"
            android:textSize="24dp"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_location" />

        <EditText
            android:id="@+id/pp16"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/ic_description"
            android:hint="Experience"
            android:textSize="24dp"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_description" />

        <EditText
            android:id="@+id/pp17"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/ic_skills"
            android:hint="Skills"
            android:textSize="24dp"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_skills" />


        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            app:backgroundTint=" #4285F4"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/freelancer_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="-2dp"
            android:layout_marginTop="40dp"
            app:itemBackground="@color/white"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/freelancer_bottom_navigation_menu" />


    </LinearLayout>
</ScrollView>